<%- include partials/_header.ejs %>
<form method="post">
    <div class="form-group">
        <label for="city">City</label>
        <input name="city" id="city" placeholder="City" value="<%= team.city %>" required>
    </div>
    <div class="form-group">
        <label for="nickname">Nick Name</label>
        <input name="nickname" id="nickname" placeholder="Nick Name" value="<%= team.nickname %>" required>
    </div>
    <div class="form-group">
        <label for="wins">Wins</label>
        <input name="wins" id="wins" value="<%= team.wins %>" type="number" required min="0">
    </div>
    <div class="form-group">
        <label for="losses">Losses</label>
        <input name="losses" id="losses" value="<%= team.losses %>" type="number" required min="0">
    </div>
    <input type="submit" value="Add">
</form>
<%- include partials/_footer.ejs %>